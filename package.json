{
  "name": "mkwii-igt-calc",
  "version": "2.0.0",
  "description": "Easily calculate in-game time for Mario Kart Wii speedruns.",
  "main": "mkwii-igt-calc-app.js",
  "module": "mkwii-igt-calc-app.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "lint": "lit-analyzer && eslint src/**/*.ts",
    "format": "prettier src/* --write",
    "analyze": "wca analyze \"src/**/*.ts\" --outFile custom-elements.json",
    "serve": "es-dev-server --node-resolve --watch",
    "watch": "concurrently \"npm run build:watch\" \"npm run serve\"",
    "checksize": "rollup -c && cat dist/mkwii-igt-calc-app.bundled.js | gzip -9 | wc -c && rm dist/mkwii-igt-calc-app.bundled.js"
  },
  "keywords": [
    "web component",
    "lit-element",
    "typescript"
  ],
  "author": "The Polymer Authors",
  "license": "MIT",
  "dependencies": {
    "@material/mwc-button": "^0.14.1",
    "@material/mwc-icon-button": "^0.14.1",
    "@material/mwc-list": "^0.14.1",
    "@material/mwc-select": "^0.14.1",
    "@material/mwc-textfield": "^0.14.1",
    "@material/mwc-top-app-bar": "^0.14.1",
    "lit-element": "^2.3.1"
  },
  "devDependencies": {
    "@rollup/plugin-replace": "^2.2.1",
    "@typescript-eslint/eslint-plugin": "^2.25.0",
    "@typescript-eslint/parser": "^2.25.0",
    "concurrently": "^5.1.0",
    "es-dev-server": "^1.46.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.1.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-prettier": "^3.1.2",
    "lit-analyzer": "^1.1.10",
    "prettier": "^2.0.0",
    "rollup": "^1.27.13",
    "rollup-plugin-filesize": "^6.2.1",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-terser": "^5.1.3",
    "typescript": "^3.7.2",
    "web-component-analyzer": "^1.0.3"
  }
}
