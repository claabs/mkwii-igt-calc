{
  "name": "mkwii-igt-calc",
  "version": "2.4.0",
  "description": "Easily calculate in-game time for Mario Kart Wii speedruns.",
  "main": "src/mkwii-igt-calc-app.ts",
  "module": "build/mkwii-igt-calc-app.js",
  "type": "module",
  "scripts": {
    "build:dist": "rimraf dist build && tsc && rollup -c rollup.config.js",
    "build": "rimraf build && tsc",
    "build:watch": "rimraf build && tsc --watch",
    "lint": "lit-analyzer && eslint src/**/*.ts",
    "format": "eslint src/**/*.ts --fix",
    "serve": "web-dev-server --node-resolve --watch",
    "serve:prod": "web-dev-server --watch --open dist/",
    "watch": "concurrently \"npm run build:watch\" \"npm run serve\""
  },
  "keywords": [
    "web component",
    "lit-element",
    "typescript",
    "lit",
    "pwa"
  ],
  "license": "MIT",
  "dependencies": {
    "@material/mwc-button": "^0.26.1",
    "@material/mwc-dialog": "^0.26.1",
    "@material/mwc-icon-button": "^0.26.1",
    "@material/mwc-list": "^0.26.1",
    "@material/mwc-select": "^0.26.1",
    "@material/mwc-snackbar": "^0.26.1",
    "@material/mwc-textfield": "^0.26.1",
    "@material/mwc-top-app-bar": "^0.26.1",
    "lit": "^2.2.3",
    "workbox-window": "^6.5.3"
  },
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^13.3.0",
    "@rollup/plugin-typescript": "^8.3.2",
    "@typescript-eslint/eslint-plugin": "^5.23.0",
    "@typescript-eslint/parser": "^5.23.0",
    "@web/dev-server": "^0.1.31",
    "@web/rollup-plugin-copy": "^0.3.0",
    "@web/rollup-plugin-html": "^1.10.3",
    "eslint": "^8.15.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.0.0",
    "lit-analyzer": "^1.2.1",
    "lit-html": "^2.2.3",
    "prettier": "^2.6.2",
    "rimraf": "^3.0.2",
    "rollup": "^2.72.1",
    "rollup-plugin-minify-html-literals": "^1.2.6",
    "rollup-plugin-summary": "1.4.3",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-workbox": "^6.2.0",
    "tslib": "^2.4.0",
    "typescript": "^4.6.4"
  }
}
